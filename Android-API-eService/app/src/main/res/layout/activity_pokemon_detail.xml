<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pokemon_detail_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>


        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:id="@+id/pokemon_detail_name"
                android:text="MissigNo"/>

            <ImageView
                android:id="@+id/pokemon_detail_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pokemon_detail_name"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pokemon_detail_image"
                android:textSize="20dp"
                android:id="@+id/pokemon_detail_type"
                android:text="Normal"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokemon_detail_type"
                android:textSize="15dp"
                android:id="@+id/pokemon_detail_height"
                android:text="Height : 0m"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokemon_detail_height"
                android:textSize="15dp"
                android:id="@+id/pokemon_detail_weight"
                android:text="Weight : 0kg"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokemon_detail_weight"
                android:textSize="15dp"
                android:id="@+id/pokemon_detail_hp"
                android:text="Hp : 0"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokemon_detail_hp"
                android:textSize="15dp"
                android:id="@+id/pokemon_detail_attack"
                android:text="Attack : 0"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokemon_detail_attack"
                android:textSize="15dp"
                android:id="@+id/pokemon_detail_defense"
                android:text="Defense : 0"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokemon_detail_defense"
                android:textSize="15dp"
                android:id="@+id/pokemon_detail_special_attack"
                android:text="Special Attack : 0"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokemon_detail_special_attack"
                android:textSize="15dp"
                android:id="@+id/pokemon_detail_special_defense"
                android:text="Special Defense : 0"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokemon_detail_special_defense"
                android:textSize="15dp"
                android:id="@+id/pokemon_detail_speed"
                android:text="Speed : 0"/>



        </RelativeLayout>


    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>