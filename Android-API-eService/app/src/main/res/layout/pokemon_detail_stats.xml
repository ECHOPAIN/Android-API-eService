<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25dp"
            android:text="Stats"/>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#EEFFFFFF">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="HP"/>
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="0"
                        android:id="@+id/pokemon_detail_hp_value"/>
                    <androidx.core.widget.ContentLoadingProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/pokemon_detail_hp_bar"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="Attack"/>
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="0"
                        android:id="@+id/pokemon_detail_attack_value"/>
                    <androidx.core.widget.ContentLoadingProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/pokemon_detail_attack_bar"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="Defense"/>
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="0"
                        android:id="@+id/pokemon_detail_defense_value"/>
                    <androidx.core.widget.ContentLoadingProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/pokemon_detail_defense_bar"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="Sp. Atk."/>
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="0"
                        android:id="@+id/pokemon_detail_spatk_value"/>
                    <androidx.core.widget.ContentLoadingProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/pokemon_detail_spatk_bar"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="Sp. Def."/>
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="0"
                        android:id="@+id/pokemon_detail_spdef_value"/>
                    <androidx.core.widget.ContentLoadingProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/pokemon_detail_spdef_bar"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="Speed"/>
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:text="0"
                        android:id="@+id/pokemon_detail_speed_value"/>
                    <androidx.core.widget.ContentLoadingProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/pokemon_detail_speed_bar"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>